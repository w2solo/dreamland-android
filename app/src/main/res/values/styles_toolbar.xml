    <style name="ToolbarTitleView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textAppearance">@style/ToolBarTitleTextAppearance</item>
    </style>

    <style name="ToolBarTitleTextAppearance" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <style name="ToolBarSubTitleTextAppearance">
        <item name="android:textSize">@dimen/text_size_desc</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="AppBarLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
        <!--        需要使用 android:elevation 才能使阴影生效，如果使用 app:elevation 则无效-->
    </style>
