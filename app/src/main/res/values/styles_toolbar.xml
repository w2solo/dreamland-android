<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Toolbar的样式-->
    <style name="ToolBarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:navigationIcon">@drawable/ic_toolbar_back_white_24dp</item>
        <item name="navigationIcon">@drawable/ic_toolbar_back_white_24dp</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="title">@null</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
        <!--从 24.0.0 开始，Toolbar的标题和返回键之间多了 16dp的间距，通过此属性可以调整-->
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:background">?colorPrimary</item>
        <item name="titleTextAppearance">@style/ToolBarTitleTextAppearance</item>

        <item name="navigationContentDescription">@string/back</item>
        <item name="android:navigationContentDescription">@string/back</item>
    </style>

