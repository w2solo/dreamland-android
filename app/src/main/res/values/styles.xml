<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CommonTitleAppearance">
        <item name="android:textAppearance">?textAppearanceBody1</item>
    </style>

    <style name="CommonDescAppearance">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_size_desc</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="BottomTabText">
        <item name="android:textColor">@color/text_color_desc_accent</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:drawablePadding">@dimen/keyline_4</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="BottomTabItem">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/keyline_8</item>
        <item name="android:paddingBottom">@dimen/keyline_8</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="AppCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_selector_white_card_fullround</item>
    </style>

    <style name="AppCardView.TopRound" parent="@style/AppCardView">
        <item name="android:background">@drawable/bg_selector_white_card_topround</item>
    </style>

    <style name="OptionItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/keyline_horizontal</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:paddingLeft">@dimen/keyline_horizontal</item>
        <item name="android:paddingRight">@dimen/keyline_horizontal</item>
        <item name="android:paddingTop">@dimen/keyline_vertical</item>
        <item name="android:paddingBottom">@dimen/keyline_vertical</item>
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:background">@drawable/bg_selector_surface</item>
    </style>

    <!--水平进度条-->
    <style name="AppProgressBar_Horizontal" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/horizontal_progressbar</item>
        <item name="android:max">100</item>
        <item name="android:indeterminate">false</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="TopicAvatarStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="SettingAvatarStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="CommentAvatarStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/avatar_size_8</item>
    </style>
</resources>